  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: NewsCycleBold;
  src: url("/src/assets/fonts/News_Cycle/NewsCycle-Bold.ttf") format("truetype");
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: RobotoMono;
  src: url("/src/assets/fonts/Roboto_Mono/RobotoMono-Regular.ttf") format("truetype");
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: RobotoMonoBold;
  src: url("/src/assets/fonts/Roboto_Mono/RobotoMono-Bold.ttf") format("truetype");
  font-weight: normal;
  font-style: normal;
}

* {
  font-family: NewsCycle, Frutiger, "Helvetica Neue", Helvetica,
    "Frutiger Linotype", Univers, Calibri, "Gill Sans", "Gill Sans MT",
