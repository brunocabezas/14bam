
@import "../../../styles/colors";

@media(max-width: 768px)
  .expositionInfoBar
    flex-wrap wrap
    .expositionInfoBarItem
      flex 1 1 50% !important
      padding 15px !important

      &:nth-child(1)
        justify-content flex-start !important
      &:nth-child(1)
      &:nth-child(2)
        border-bottom 3px solid $black
      &:nth-child(2)
        text-align right
        justify-content flex-end !important

      // &:nth-child(3)
      &:nth-child(4)
      &:nth-child(3)
        padding 0 !important
        height 45px
        display flex
        width 100%
        flex 1 1 100% !important
        text-align right
        justify-content flex-end !important

      &:last-child
        position absolute
        bottom 0
        left 0
        height 90px
        text-align left !important
        .expositionInfoBarItem__linkWrapper
          .expositionInfoBarItem__link
            left: 0

.expositionInfoBar
  position relative
  display flex
  padding 0
  border-top 3px solid $black
  border-bottom 3px solid $black
  vertical-align center
  min-height 120px


  .expositionInfoBarItem
    flex 1
    padding 0.8em 10px
    font-size 22px
    font-weight bold
    text-align center
    display flex
    align-items center
    justify-content center

    .link
      font-family 'News Cycle', sans-serif

    &:first-child
      text-align left
      padding-left 0

    &:last-child
      text-align right
      padding-right 0
      flex-direction column
      justify-content center

  .expositionInfoBarItem__link
    color $black
  .loaderContainer--loading
    top 40%