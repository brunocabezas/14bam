@import "../../../styles/colors";

.exposition
  // Top section with basic information about an exposition
  .expositionInfo
    display flex
    padding 0 1em
    border-top 3px solid $black
    border-bottom 3px solid $black
    vertical-align center

    .expositionInfoItem
      flex 1
      padding 0.8em 0
      font-size 25px
      font-weight bold
      text-align center
      display flex
      align-items center
      justify-content center
      
      .link
        font-family 'News Cycle', sans-serif

      &:first-child
        text-align left

      &:last-child
        text-align right
        flex-direction column
        justify-content center

  // Main exposition section
  .expositionLayout
    padding 2em 1em
    display flex
    // Layout is divided in two columns
    .rightSection
    .leftSection
      flex 1 1 50%

    .leftSection
      padding 15px 35px 15px 15px 
      p
      p > *
        font-size 13px
        line-height 24px !important

    .rightSection
      padding 15px 15px 15px 35px
      .expositionGallery
        margin-bottom 3em
        background-color $black
        height 300px
        
  .expositionTitle
    margin-top 0
    font-weight bold
    font-size 46px
    text-decoration underline