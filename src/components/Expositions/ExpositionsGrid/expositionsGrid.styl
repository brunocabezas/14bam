
@import "../../../styles/colors";

.expositionsGrid
  display: flex;
  flex-wrap: wrap;
  padding-top: 15px

  .exposition
    padding 0
    flex: 1 1 33.3%;
    margin-bottom 2em
    max-width 33.3%

    .expositionName
      margin: 0 0 5px 0;
      font-size 25px
      a
        text-decoration none
        &:hover
          text-decoration underline

    .expositionText
      p
        color: $black;
        line-height 30px
        font-family "News Cycle", sans-serif
        font-size 20px
        font-weight bold

      *
        margin: 0;