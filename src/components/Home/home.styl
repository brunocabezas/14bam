@import '../../styles/colors';

.home
  height: 100%;
  position: relative;

  section
    position: relative;
    min-height: calc(100vh - 100px);
    padding: 1em 3em 1em 3em;
    flex: 1;

    &.halfSections
      display: flex;

      .sectionRight
        padding-left: 1em;
        .loaderContainer
          height: calc(100% - 62px - 80px);

      .sectionLeft
        padding-right: 1em;

      .sectionRight, .sectionLeft
        flex: 1 1 50%;
        position: relative;

    .sectionTitle
      text-decoration: underline;
      font-size: 36pt;
      margin-bottom: 1em;
      color: $black;

      a
        color: $black;

    &.homeTop
      display: flex;
      align-items: center;
      justify-content: center;

      .videoPlayer
        height: 100%;

    &.sponsors
      .sponsor
        background-position: center center;
        background-repeat: no-repeat;
        background-size: contain;

        &:last-child
          margin: 40px 0 60px 0;