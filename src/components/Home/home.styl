@import '../../styles/colors';

.home
  height: 100%;
  position: relative;

  
   // TODO Remove homeTop after replacing Home with FutureHome
  .homeTop
    display: flex;
    align-items: center;
    justify-content: center;
    text-align center

    img
      display inline-block
      margin 0 auto
      left 0
      right 0

    .videoPlayer
      height: 100%;
      iframe
        height 100%

  section
    position: relative;
    min-height: 100vh;
    padding: 1em 3em 1em 3em;
    flex: 1;

    .sectionText
      p
        color $white
        font-family 'Roboto Mono', monospace
        span
          font-family 'Roboto Mono', monospace

    &.halfSections
      display: flex;
      height 100vh

      .sectionRight
        padding-left: 1em;
        display flex
        flex-direction column

      .sectionLeft
        padding-right: 1em;

      .sectionRight, .sectionLeft
        flex: 1 1 50%;
        position: relative;

    .sectionTitle
      font-size: 36pt;
      margin-bottom: 1em;
      color: $black;

      a
        color: $black;

    // First section
    &.expositions
      .expositionsGrid
        margin 0
        padding 0

    &.videos
      display flex
      margin 0
      padding 0

    &.programs
      display flex
      flex-direction column
      .loaderContainer
        flex-grow 80%
        text-align center

    // TODO Remove homeTop after replacing Home with FutureHome
    &.sponsors
      .sponsor
        background-position: center center;
        background-repeat: no-repeat;
        background-size: contain;
    
    &.abstract
      font-family NewsCycle, sans-serif
      color $white
      margin-top 3em
      margin-bottom 1em
      height 200px
      min-height auto
      display flex
      justify-content center
      .abstractWrapper
        display flex
        .abstractWrapperRight
          flex 3
          padding 1em
          p
            margin-top 0
          br
            display none
        .abstractWrapperLeft
          flex 2
          padding 1em
          .abstractDates
            font-family NewsCycle, sans-serif
            font-size: 18px
            color $white
          .abstractTitle
            font-size 34px
            text-transform uppercase
            margin 0 0 15px 0
            a
              text-decoration none
              &:hover
                text-decoration underline
